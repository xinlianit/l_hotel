<div dialog-id="add-mart-box" class="hide">
    <form class="form-horizontal" role="form" form-id="add-mart-form" action="{:U('Baseinfo/addMart')}" method="post">
        <div class="form-group">
                <label class="col-sm-2 control-label no-padding-right" for="form-field-1"> 商户地址：</label>
                <div class="col-sm-10">
                        <div id="city-component1" class="city-component" default-province="440000" default-city="440300" default-region="440304"></div>
                </div>
        </div>
        <div class="form-group">
            <label class="col-sm-2 control-label no-padding-right">商圈名称：</label>
            <div class="col-sm-10">
                <input type="text" name="mart_name[]"  class="col-xs-10">&nbsp;&nbsp;<a class="mart_close" href="javascript:void(0)"><i class="icon-minus-sign"></i></a>
            </div>            
        </div>
        <div class="form-group">
            <label class="col-sm-2 control-label no-padding-right"></label>
            <div class="col-sm-10"><i class="spread icon-plus-sign"></i>&nbsp;<a  class="mart_add" href="javascript:void(0)">添加商圈</a></div>
        </div>
        <div class="space-4"></div>        
    </form>
</div>